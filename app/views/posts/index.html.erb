<div class="posts">
  <% @posts.each do |post| %>
    <section class="post">
      <div class="user">
        <div class="avatar">
          <img src="https://scontent.fsgn5-3.fna.fbcdn.net/v/t1.0-9/30709686_975554745941884_7701712407176937472_o.jpg?_nc_cat=111&_nc_ht=scontent.fsgn5-3.fna&oh=8fce37c1b03b10ff5947194e789cf95a&oe=5CD2797E">
        </div>
        
        <div class="username">
          <%= post.user.username %>
        </div>
      </div>
      <%= image_tag post.image, class: 'main-image' %>
    
      <div class="description">
        <%= post.description %>
      </div>
    </section>
  <% end %>
  <%= paginate @posts %>
</div>